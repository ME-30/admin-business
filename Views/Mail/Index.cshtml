@model WebApplication7.Models.MailVM
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/MainLayout.cshtml";

}
<center>
        <h2>Send Mail</h2>
</center>

<h3> @TempData["msg"]</h3>

<form asp-controller="Mail" asp-action="SendMail" method="post" class="form-group">
   
    <label asp-for="Customer">Customer</label>
    <input type="text" placeholder="Enter Customer" asp-for="Customer" class="form-control" />
    <span class="text-danger" asp-validation-for="Customer" ></span>


    <br />


    <label asp-for="Title">Title</label>
    <input type="text" placeholder="Enter Titele" asp-for="Title" class="form-control" />
    <span class="text-danger" asp-validation-for="Title" ></span>


    <br />
     <label asp-for="Massege"> Massege </label>
    <textarea asp-for="Massege" placeholder="Enter Massege" class="form-control" rows="4"></textarea>
    <span class="text-danger" asp-validation-for="Massege" ></span>

    <br />

    <input type="submit" value="send" class="btn btn-primary" />

</form> 