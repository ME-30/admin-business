@model WebApplication7.Models.EmployeeVM

@{
    ViewBag.Title = "Employee Delete";
}

<h2>Delete Employee</h2>



<br />

<a asp-controller="Employee" asp-action="Index" class="btn btn-primary"> Back to list</a>

<br />



<form asp-controller="Employee" asp-action="Delete" method="post" class="form-group">

    <label asp-for="Name">Employee Name</label>
    <input type="text" asp-for="Name" disabled class="form-control" />
    <br /><br />

    <label asp-for="Salary">Employee Salary</label>
    <input type="text" asp-for="Salary" disabled class="form-control" />
    <br /><br />

    <label asp-for="Address">Employee Address</label>
    <input type="text" asp-for="Address" disabled class="form-control" />
    <br /><br />

    <label asp-for="Email">Employee Email</label>
    <input type="email" asp-for="Email" disabled class="form-control" />
    <br /><br />


    <label asp-for="HireDate">Hire Date</label>
    <input type="text" asp-for="HireDate" disabled class="form-control" />
    <br /><br />


    <label asp-for="Notes">Notes</label>
    <textarea asp-for="Notes" disabled class="form-control" rows="4"></textarea>
    <br /><br />


    <label asp-for="DepartmentId">Department</label>
    <select asp-for="DepartmentId" disabled asp-items="@(SelectList)ViewBag.DepartmentList">
        <option>Choose Department</option>
    </select>

        
    <br /><br />

    <img src="~/Files/photes/@Model.PhotoName" width="70" height="70" />
    <br />
    <label class="custom-control-label" asp-for="PhotoName"> Edit Photo</label>
    <input type="file"disabled asp-for="PhotoName" class="custom-control-input">

    <br /><br />
    <a href="~/Files/docs/@Model.CvName">Download CV</a>
    <br /><br />
    <label class="custom-control-label" asp-for="CvName"> Edit CV</label>
    <input type="file" disabled asp-for="CvName" class="custom-control-input">

    <br /><br />

    <div class="custom-control custom-checkbox">
        <input type="checkbox" disabled asp-for="IsActive" class="custom-control-input">
        <label class="custom-control-label" asp-for="IsActive"> Is Active</label>
    </div>

    <br />
    <center>
        <input type="submit" value="Delete" class="btn btn-primary" />
    </center>

</form>

<script src="~/jquery/jquery.min.js"></script>
<script src="~/jquery-validate/jquery.validate.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

